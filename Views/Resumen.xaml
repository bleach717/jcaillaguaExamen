<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcaillaguaExamen.Views.Resumen"
             BackgroundColor="White">
    
    <VerticalStackLayout>
        <Label x:Name="lbluser"
           TextColor="Black"/>
        
        <Label 
            Text="RESUMEN"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Black"/>

        <Grid
    Padding="20"
    RowSpacing="10"
    ColumnSpacing="15">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

  
            <Label Text="Nombre:" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   TextColor="Black"/>
            <Label x:Name="txtNombre" 
                   Grid.Row="0" 
                   Grid.Column="1" 
                   TextColor="Black"/>

            <Label Text="Apellido:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   TextColor="Black"/>
            <Label x:Name="txtApellido" 
                   Grid.Row="1" 
                   Grid.Column="1"
                   TextColor="Black"/>

            <Label Text="VA:" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   TextColor="Black"/>
            <Label x:Name="txtVA" 
                   Grid.Row="2" 
                   Grid.Column="1"
                   TextColor="Black"/>

         
            <Label Text="Fecha:" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   TextColor="Black"/>
            <Label  x:Name="txtFecha" 
                    Grid.Row="3" 
                    Grid.Column="1" 
                    TextColor="Black"/>


            <Label Text="Ciudad:" 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   TextColor="Black"/>
            <Label x:Name="txtCiudad" 
                   Grid.Row="4" 
                   Grid.Column="1"
                   TextColor="Black"/>

    
            <Label Text="Monto Inicial:" 
                   Grid.Row="5" 
                   Grid.Column="0" 
                   TextColor="Black"/>
            
            <Label x:Name="txtMontoInicial" 
                   Grid.Row="5" 
                   Grid.Column="1"  
                   TextColor="Black"/>

 
            <Label Text="Cuota Mensual:" 
                   Grid.Row="6" 
                   Grid.Column="0"  
                   TextColor="Black"/>
            
            <Label x:Name="txtCuotaMensual" 
                   Grid.Row="6" 
                   Grid.Column="1"  
                   TextColor="Black"/>

     
            <Label Text="Pago Total:" 
                   Grid.Row="7" 
                   Grid.Column="0" 
                   TextColor="Black"/>
            <Label x:Name="txtPagoTotal" 
                   Grid.Row="7" 
                   Grid.Column="1" 
                   TextColor="Black"/>

        </Grid>

        <Button x:Name="btnCerrar"
             Text="Resumen"
             Clicked="btnCerrar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>